<mvc:View controllerName="com.sap.lh.mr.zvoltagevalidation.controller.Main"
    xmlns:vh="sap.ui.mdc.filterbar.vh" xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:f="sap.f" 
    xmlns:mdc="sap.ui.mdc"
    xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPageHeader
       
    >
        <f:content>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad"
                filterContainerWidth="13rem"
                header="inLog" showClearOnFB="false"
                class="sapUiSmallMarginBottom"
            >
              <fb:filterGroupItems>                                
                                <fb:FilterGroupItem name="Equipment" 
								label="Equipment" 
								groupName="Group1" 
								visibleInFilterBar="true" mandatory="true">
                                    <fb:control>
                                        <!-- <Input
                                         id="idEquipment" 
										 width="90%"  
										 showValueHelp="true"
										 value="{filters>/idEquipment}"
                                         class="sapUiSmallMarginBottom" valueHelpRequest="onSingleConditionVHRequested">
                                        </Input> -->
                                        <MultiInput id="idEquipment"
			valueHelpIconSrc="sap-icon://value-help" value="{filters>/idEquipment}"
			width="60%"  class="sapUiSmallMarginBottom"
			valueHelpRequest="onSingleConditionVHRequested"/>
                                    </fb:control>
                                </fb:FilterGroupItem>
									<fb:FilterGroupItem 
										name="periodFrom" 
										label="Period From" 
										groupName="Group1" 
										visibleInFilterBar="true" mandatory="true">
											<fb:control>											
                                           <DateTimePicker
                                            id="idDTP1"
                                            width="100%"
                                            placeholder="Enter Date &amp; Time"
                                            class="sapUiSmallMarginBottom"/>
                                                                                    
											</fb:control>
										</fb:FilterGroupItem>
										 <!-- Profile Ratio -->
										<fb:FilterGroupItem
											name="periodTo"
											label="Period To"
											groupName="Group1"
											visibleInFilterBar="true" mandatory="true">
											<fb:control>
												<DateTimePicker
                                            id="idDTP2"
                                            width="100%"
                                            placeholder="Enter Date &amp; Time"
                                            class="sapUiSmallMarginBottom" />
											</fb:control>
										</fb:FilterGroupItem>
										 									
                               
                            </fb:filterGroupItems>
						
            </fb:FilterBar>
        </f:content>
		<f:content>
        <core:Fragment
                fragmentName="com.sap.lh.mr.zvoltagevalidation.fragment.items"  
                type="XML"
            />
        </f:content>

    </f:DynamicPageHeader>
</mvc:View>